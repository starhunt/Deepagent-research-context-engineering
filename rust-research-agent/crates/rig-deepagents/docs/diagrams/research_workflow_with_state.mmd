graph TD
    orchestrator[orchestrator]:::active
    planner[planner]:::halted
    router{router}:::halted
    researcher[(researcher)]:::halted
    web_search[[web_search]]:::halted
    synthesizer[synthesizer]:::halted
    report_writer[report_writer]:::halted

    orchestrator --> planner
    planner --> router
    router --> researcher
    router --> synthesizer
    researcher --> web_search
    web_search --> synthesizer
    synthesizer --> report_writer

    classDef active fill:#90EE90,stroke:#228B22,stroke-width:2px
    classDef halted fill:#FFE4B5,stroke:#FF8C00,stroke-width:1px
    classDef completed fill:#D3D3D3,stroke:#696969,stroke-width:1px
